<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="10dp" />
            <stroke
                android:width="1dp"
                android:color="#FF88FF"
                />

            <gradient
                android:angle="180"
                android:centerColor="#336699"
                android:startColor="#3399ff"
                android:endColor="#009966"
                />
        </shape>
    </item>
    <item android:state_pressed="true"> <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <corners android:radius="10dp" />
        <stroke
            android:width="1dp"
            android:color="#0000FF"
            />

        <gradient
            android:angle="90"
            android:centerColor="#FFCCFF"
            android:startColor="#66FFCC"
            android:endColor="#66CCCC"
            />
    </shape></item>
</selector>